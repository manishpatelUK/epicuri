<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:id="@+id/paymentDialogLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/abc_dialog_padding_material">

        <TextView
            android:id="@+id/refundLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REFUND"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errors_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Error"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/paymentsense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ProgressBar
                android:id="@+id/paymentsense_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/pdq_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:minHeight="48dp"
                android:layout_weight="1"
                android:layout_marginRight="12dp" />

            <ImageButton
                android:id="@+id/payment_sense_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="Send to PDQ"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_send_to_pdq"
                android:textAllCaps="false"/>

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/TextAppearance.Epicuri.FormCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Payment Type" />

        <Spinner
            android:id="@+id/paymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:minHeight="48dp" />

        <LinearLayout
            android:id="@+id/mews_customer_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.Epicuri.FormCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mews Customer" />

            <TextView
                android:id="@+id/mewsCustomer"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mewsError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/redtext"
            android:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="£1"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintEnd_toStartOf="@+id/btn_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="£5"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintEnd_toStartOf="@+id/btn_10"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_10"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="£10"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintEnd_toStartOf="@+id/btn_20"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_5"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_20"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:text="£20"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_10"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_equal_split"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:text="Equal split"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_5"
                app:layout_constraintStart_toStartOf="@id/btn_1"
                app:layout_constraintTop_toBottomOf="@+id/btn_10" />

            <Button
                android:id="@+id/btn_defer"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_btn_height"
                android:text="@string/defer_payment"
                android:textSize="@dimen/amount_btn_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_20"
                app:layout_constraintStart_toStartOf="@id/btn_10"
                app:layout_constraintTop_toBottomOf="@+id/btn_10" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form">

        <Button
            android:id="@+id/cancel_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:minHeight="48dp"
            android:text="Cancel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/print_preferences"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:minHeight="48dp"
                android:text="@string/print_prefs"/>

            <Button
                android:id="@+id/pay_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:minHeight="48dp"
                android:text="Pay" />

            <Button
                android:id="@+id/pay_and_close_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:minHeight="48dp"
                android:text="Pay and Close" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

</ScrollView>