<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="576px"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/cashup_header"
        style="@style/ReceiptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/receiptLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/restaurantAddress"
        style="@style/ReceiptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Address 1\nAddress 2\n01904 444888"/>
    <TextView
        android:id="@+id/restaurantEmail"
        style="@style/ReceiptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="peterocks@petesrestaurant.com"/>
    <TextView
        android:id="@+id/restaurantWeb"
        style="@style/ReceiptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="www.petesrestaurant.com"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/printedBy"
            style="@style/ReceiptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Printed by John"/>

        <TextView
            android:id="@+id/printDate"
            style="@style/ReceiptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2013 10:20"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dateRange"
        style="@style/ReceiptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/12/2013 10:00 - 12/12/2013 10:00"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="24px"
        android:layout_marginTop="4px"
        android:background="#ff000000"/>

    <TableLayout
        android:id="@+id/itemsContainer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="24px"
        android:layout_marginTop="4px"
        android:background="#ff000000"/>

    <TextView
        android:id="@+id/cashup_footer"
        style="@style/ReceiptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

</LinearLayout>