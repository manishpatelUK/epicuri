<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Epicuri" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkOrange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textViewStyle">@style/EpicuriTextViewStyle</item>
        <item name="android:editTextStyle">@style/EpicuriEditTextStyle</item>
        <item name="android:buttonStyle">@style/EpicuriButtonStyle</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <!--<item name="android:actionButtonStyle">@style/myActionButtonStyle</item>-->
        <!--<item name="actionButtonStyle">@style/myActionButtonStyle</item>-->
        <!--<item name="android:tabWidgetStyle">@style/CustomTabWidget</item>-->
    </style>
    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
        <item name="android:height">20dp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>
    <style name="CustomTabWidgetText"
           parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">@dimen/actionBarIconSizeMin</item>
        <item name="android:maxWidth">@dimen/actionBarIconSizeMax</item>
        <item name="android:width">@dimen/actionBarIconSizeMax</item>
        <!--<item name="android:minHeight">@dimen/actionBarIconSizeMin</item>-->
        <!--<item name="android:maxHeight">@dimen/actionBarIconSizeMax</item>-->
        <!--<item name="android:height">@dimen/actionBarIconSizeMax</item>-->
        <!--<item name="android:scaleX">1.3</item>-->
        <!--<item name="android:scaleY">1.3</item>-->
        <!--<item name="android:textScaleX">1</item>-->
        <!--<item name="android:textSize">9dp</item>-->
    </style>

    <style name="EpicuriDark" parent="Theme.AppCompat">
        <item name="android:textViewStyle">@style/EpicuriTextViewStyle</item>
        <item name="android:editTextStyle">@style/EpicuriEditTextStyle</item>
        <item name="android:buttonStyle">@style/EpicuriButtonStyle</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="EpicuriOrangeBackground" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textViewStyle">@style/EpicuriTextViewStyle</item>
        <item name="android:editTextStyle">@style/EpicuriEditTextStyle</item>
        <item name="android:buttonStyle">@style/EpicuriButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/blue</item>
    </style>

    <style name="Epicuri.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="BigButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">16dp</item>
        <!--<item name="android:textColor">@color/black</item>-->
        <!--<item name="android:background">@drawable/btn_grey</item>-->
    </style>

    <style name="BigButton.Blue">
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:background">@drawable/btn_blue</item>-->
    </style>

    <style name="KeyboardButtonNew">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/keyboard_number_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ThemeOverlay.Epicuri.ActionBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:colorBackground">@color/orange</item>
    </style>

    <style name="EpicuriButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="EpicuriTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="EpicuriEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Epicuri.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Epicuri.FormCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Epicuri.RadioButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="EmptyText">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <style name="ReceiptText">
        <item name="android:fontFamily">sans</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">24px</item>

    </style>
    <style name="ReceiptTextComment">
        <item name="android:fontFamily">sans</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">20px</item>
    </style>
    <style name="ReceiptTextHeader">
        <item name="android:fontFamily">sans</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="Widget.Epicuri" parent="@android:style/Widget">

    </style>

    <style name="Widget.Epicuri.Tab">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.Epicuri.TabText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>