@model epicuri.Core.DatabaseModel.ScheduleItem

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Info</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ScheduleItem</legend>

        @Html.HiddenFor(model => model.Id)

        <input type="hidden" value="@ViewBag.ServiceId" name="ServiceId" />

        <div class="editor-label">
            @Html.LabelFor(model => model.Delay, "Delay *")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Delay)
            @Html.ValidationMessageFor(model => model.Delay) seconds
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List",  "Schedule", new { controller = "Service", id = ViewBag.ServiceId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
