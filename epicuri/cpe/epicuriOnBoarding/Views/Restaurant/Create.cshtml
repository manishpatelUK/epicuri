@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script>
    function lookup() {
        if (document.getElementById('Address_PostCode').value.length == 0) {
            alert('You must first enter a postcode');
        }
        else {
            window.open("/Geo/Lookup/" + document.getElementById('Address_PostCode').value, "Lookup", 'width=420,height=400,location=no,toolbar=no,resizable=no,menubar=no');
        }
    }
</script>
