@model IEnumerable<epicuri.Core.DatabaseModel.Notification>

@{
    ViewBag.Title = "Index";
}

<h2>Notification Types</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.RestaurantId, controller = "Notification" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Target)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Target)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurant.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id, controller="Notification" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, controller = "Notification" })
        </td>
    </tr>
}

</table>
