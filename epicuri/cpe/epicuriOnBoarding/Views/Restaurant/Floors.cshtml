@model IEnumerable<epicuri.Core.DatabaseModel.Floor>

@{
    ViewBag.Title = "Index";
}

<h2>Floors for Restaurant @ViewData["name"]</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Floor", new { id = ViewData["id"] }, null)
</p>
<table>
    <tr>
        <th>
            Floor Name
        </th>
        <th>
            URL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resource.CDNUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Floor", new { id = item.Id },null) |
            @Html.ActionLink("Change Picture", "Picture", "Floor", new { id = item.Id },null) |
            @Html.ActionLink("Delete", "Delete", "Floor", new { id=item.Id },null)
        </td>
    </tr>
}

</table>
