@model epicuri.Core.DatabaseModel.Printer

@{
    ViewBag.Title = "Create Printer";
}


<h2>Create Printer for Restaurant @ViewData["name"]</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Printer</legend>
  
        <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Name *")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IP, "IP (leave blank if screen printer only)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IP)
            @Html.ValidationMessageFor(model => model.IP)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Printers", new { controller = "Restaurant", id = ViewBag.RestaurantId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
