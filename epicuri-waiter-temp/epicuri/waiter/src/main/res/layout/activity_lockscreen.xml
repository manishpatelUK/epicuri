<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockscreen_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/logged_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/currently_logged_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENTLY LOGGED IN AS"
            android:paddingTop="@dimen/current_user_padding_top"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/current_user_txt_size"/>

        <Button
            android:id="@+id/quick_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_switch"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/epicuri_logo_w"
        android:layout_height="@dimen/epicuri_logo_h"
        android:scaleType="center"
        android:src="@drawable/logonew1"
        android:layout_below="@+id/logged_in"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_in_icon"
                android:layout_width="@dimen/lock_screen_icon_size"
                android:layout_height="@dimen/lock_screen_icon_size"
                android:src="@drawable/checkin_icon"
                />

            <TextView
                android:id="@+id/check_ins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="--"
                android:textSize="@dimen/lock_screen_icon_txt_size"
                android:layout_marginTop="@dimen/lock_screen_icon_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Walk-ins /\nCheck-ins"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/no_orders_icon"
                android:layout_width="@dimen/lock_screen_icon_size"
                android:layout_height="@dimen/lock_screen_icon_size"
                android:src="@drawable/orders_icon"/>

            <TextView
                android:id="@+id/new_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="--"
                android:textSize="@dimen/lock_screen_icon_txt_size"
                android:layout_marginTop="@dimen/lock_screen_icon_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Tables\nWithout Orders"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bill_request_icon"
                android:layout_width="@dimen/lock_screen_icon_size"
                android:layout_height="@dimen/lock_screen_icon_size"
                android:src="@drawable/bill_icon"/>

            <TextView
                android:id="@+id/bill_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="--"
                android:textSize="@dimen/lock_screen_icon_txt_size"
                android:layout_marginTop="@dimen/lock_screen_icon_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Tables\nRequesting Bills"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_above="@+id/logout_button"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/stars_margin_bottom">

                <ImageView
                    android:id="@+id/keyboard_bttn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:onClick="onKeyboardBack"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>

            <LinearLayout
                android:id="@+id/stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#00000000"
                >

                <ImageView
                    android:id="@+id/first_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/asteriks"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/stars_margin_right"/>

                <ImageView
                    android:id="@+id/second_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/asteriks"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/stars_margin_right"/>

                <ImageView
                    android:id="@+id/third_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/asteriks"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/stars_margin_right"/>

                <ImageView
                    android:id="@+id/fourth_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/asteriks"
                    android:visibility="invisible"/>

            </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/stars"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    />

            </RelativeLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/keyboard_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/keyboard_margin_right"
                android:clickable="true"
                android:onClick="handleKeyboardClick"
                >

                <TextView
                    android:id="@+id/keyboard_bttn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:text="1"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/keyboard_bttn_1_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:layout_below="@+id/keyboard_bttn_1"
                    android:text=""
                    android:textSize="@dimen/keyboard_text_size"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/keyboard_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/keyboard_margin_right"
                android:clickable="true"
                android:onClick="handleKeyboardClick"
                >

                <TextView
                    android:id="@+id/keyboard_bttn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:text="2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/keyboard_bttn_2_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:layout_below="@+id/keyboard_bttn_2"
                    android:text="ABC"
                    android:textSize="@dimen/keyboard_text_size"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/keyboard_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:clickable="true"
                android:onClick="handleKeyboardClick"
                >

                <TextView
                    android:id="@+id/keyboard_bttn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:text="3"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/keyboard_bttn_3_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KeyboardButtonNew"
                    android:layout_below="@+id/keyboard_bttn_3"
                    android:text="DEF"
                    android:textSize="@dimen/keyboard_text_size"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/keyboard_top_padding">

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="4"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_4_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_4"
                        android:text="GHI"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="5"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_5_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_5"
                        android:text="JKL"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="6"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_6_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_6"
                        android:text="MNO"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/keyboard_top_padding">

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="7"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_7_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_7"
                        android:text="PQRS"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="8"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_8_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_8"
                        android:text="TUV"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="9"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_9_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_9"
                        android:text="WXYZ"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/keyboard_top_padding">

                <View
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    />

                <RelativeLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/keyboard_margin_right"
                    android:clickable="true"
                    android:onClick="handleKeyboardClick"
                    >

                    <TextView
                        android:id="@+id/keyboard_bttn_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:text="0"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/keyboard_bttn_0_below"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/KeyboardButtonNew"
                        android:layout_below="@+id/keyboard_bttn_0"
                        android:text="+"
                        android:textSize="@dimen/keyboard_text_size"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/keyboard_size"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/keyboard_bttn_clear"
                        android:layout_width="@dimen/refresh_icon_size"
                        android:layout_height="@dimen/refresh_icon_size"
                        android:src="@drawable/refresh"
                        android:onClick="onKeyboardClear"
                        android:clickable="true"
                        android:layout_gravity="top"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout_button"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/logout" />

</RelativeLayout>