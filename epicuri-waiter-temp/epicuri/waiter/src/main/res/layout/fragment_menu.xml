<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/menuChoiceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/menuChoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:minHeight="48dp"/>

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/expand"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="46dp"
                android:layout_height="50dp"
                android:tint="@color/black"
                android:src="@drawable/expand_btn_bg"/>

            <EditText
                android:id="@+id/short_code_edittext"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                android:hint="Code/Search"
                android:imeOptions="actionSearch"
                android:imeActionLabel="Done"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/clear"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="46dp"
                android:layout_height="50dp"
                android:text="X"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuChoiceContainer"
            android:layout_centerVertical="true"
            android:weightSum="100">

            <HorizontalScrollView
                android:id="@+id/scroll"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:fillViewport="true">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </HorizontalScrollView>

            <View android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/clicker2"
                  android:layout_alignLeft="@+id/scroll"
                  android:layout_alignRight="@+id/scroll"
                  android:layout_alignTop="@+id/scroll"
                  android:layout_alignBottom="@+id/scroll"/>
        </RelativeLayout>


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs">

            <View
                android:id="@android:id/empty"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightgray"/>

            <View
                android:id="@+id/divider"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/darkgray"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:id="@+id/clicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menuChoiceContainer"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>


</TabHost>