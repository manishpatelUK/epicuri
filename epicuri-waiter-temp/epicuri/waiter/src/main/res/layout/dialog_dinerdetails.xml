<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/abc_dialog_padding_material">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Diet:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/diet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Allergies:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/allergies_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Favourite Drink:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/favouriteDrink_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Favourite Food:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/favouriteFood_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Favourite Tastes:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/foodPreferences_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Dislikes:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <TextView
                android:id="@+id/hatedFood_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text=" - "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="Additional Info:"
                android:textAppearance="@style/TextAppearance.Epicuri.Body2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/birthday_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:src="@drawable/birthday_light_large"/>

                <ImageView
                    android:id="@+id/blackmark_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:src="@drawable/blackmarks"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>


</LinearLayout>
